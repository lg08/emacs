/* implements a bunch of string functions */
/* Lucas Gen */


#include <stdio.h>
#include <stdlib.h>
#include <stddef.h>
#include <assert.h>
#include <string.h>




/* returns the length of the string */
size_t Str_getLength(const char pcSrc[])
{
  size_t uLength = 0;
  assert(pcSrc != NULL);
  while (pcSrc[uLength] != '\0')
    uLength++;
  return uLength;
}


/* copies one string into another */
char Str_copy(char str1[], const char str2[])
{
  size_t index = 0;
  char current_char;
  assert(str1 != NULL);
  assert(str2 != NULL);

  while (str2[index] != '\0')
    {
      current_char = str2[index];
      str1[index] = current_char;
      index++;
    }
  str1[index] = '\0';

  return str1;
}


/* concatenates one string onto the end of another */
char Str_concat(char str1[], const char str2[])
{
  size_t index;
  char current_char;
  size_t str1_length;
  
  assert(str1 != NULL);
  assert(str2 != NULL);

  str1_length = Str_getLength(str1);
  index = 0;

  printf("string1 length is: %d\n", str1_length);
  
  while (str2[index] != '\0')
    {
      current_char = str2[index];
      str1[str1_length + index] = current_char;
      index++;
    }
    str1[str1_length + index] = '\0';

    return str1;
}

/* this function compares two different strings */
int Str_compare(const char str1[], const char str2[])
{
  char char1;
  char char2;
  int i;

  i = 0;
  
  while (str1[i] != '\0' && str2[i] != '\0')
    {
      char1 = str1[i];
      char2 = str2[i];

      /* taken from page 135 of the textbook */
      /* converts lower case letters to uppercase */
      if ('a' <= char1 && char1 <= 'z')
        {
          char1 = char1 - 'a' + 'A';
        }
      if ('a' <= char2 && char2 <= 'z')
        {
          char2 = char2 - 'a' + 'A';
        }

      if (char1 < char2)
        {
          return -1;
        }
      else if (char1 > char2)
        {
          return 1;
        }

      i++;
    }

  if (str1[i] == '\0' && str2[i] == '\0')
    {
      return 0;
    }
  else if (str1 == '\0')
    {
      return -1;
    }
  else
    {
      return 1;
    }
  
  
}


