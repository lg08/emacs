/* just prints all the sizes of armlab stuff */

#include <stdio.h>
#include <stdlib.h>
#include <assert.h>


int main(void)
{

  printf("size of pointer: ");
  printf("%lu\n", sizeof(int *));

  printf("size of int: ");
  printf("%lu\n", sizeof(int ));

  printf("size of float: ");
  printf("%lu\n", sizeof(float ));

  printf("size of long: ");
  printf("%lu\n", sizeof(long ));

  printf("size of short: ");
  printf("%lu\n", sizeof(short ));

  printf("size of char: ");
  printf("%lu\n", sizeof(char ));


   return 0;
}
